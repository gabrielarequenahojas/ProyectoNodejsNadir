<h1> SELECCIONA LA OPCION CORRECTA </h1>


<audio src="recursos/audios/pregunta_1_1.mp3" autoplay="true"></audio>

<audio id="ganar" src="recursos/audios/ganar.mp3"></audio>   
<audio id="perder" src="recursos/audios/perder.mp3"></audio> 

<div class="col-md-12 col-md-offset-2 ">         
    <div id="opciones">
    
       	{{#each objOpciones}}        	       	   
          <div class='responsive'><div class='gallery'><button id='{{valida}}' onClick="validarOpcion(this.id)"> <img class='imagen' src='{{url_imagen}}' alt='{{url_imagen}}'></button></div></div>          
  		{{/each}}            
    </div>    
  </div>
<script>
	function validarOpcion(tipo){
		//alert(tipo);
		if(tipo == 1){
	        alert("¡¡¡¡FELICIDADES!!!!");
	        var r = document.getElementById("ganar");	                
	        aud = r.play();
	                                
	    }else{
	        alert("¡¡¡¡RESPUESTA INCORRECTA!!!!");
	        var s = document.getElementById("perder");
	        aud = s.play();
	        resaltar();	                
	    }
	}

	function resaltar(){
		document.getElementById("1").style.border="thick solid green";
		document.getElementById("0").style.border="thick solid red";
	}
	}
	
</script>