{{#section 'head'}}

      <link rel="stylesheet" href="css/cssNavegador.css"> 
    <script type="text/javascript" src="js/jquery-3.3.1.js"></script>
    <script type="text/javascript"  src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/jquery.validate.min.js"></script> 
{{/section}}

<div class="row">
<h1> NADIR BD: TABLA {{title}} </h1>
</div>


<a href="/video/new" type="button" class="btn btn-info" >Nuevo</a>

<div class="row pt-md-5"></div>
<h3> LISTA DE VIDEOS</h3>
{{#each objVideos}}
  <div class="row">
    <div class="col-4 col-sm-1"><a href='/video/{{id}}'>{{titulo}}</a></div>
    <div class="col-4 col-sm-1"><a type="button" class="btn btn-info" href='/video/{{id}}/edit'>editar</a></div>
    <div class="col-4 col-sm-1">
      <form action='/video/{{id}}?_method=DELETE' method='post'>
        <button type="submit" class="btn btn-info">borrar</button>            
      </form>
    </div>
    <div class="col-6 col-sm-9"></div>
  </div>
{{/each}}
  
